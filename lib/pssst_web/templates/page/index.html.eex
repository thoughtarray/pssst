<div class="grid grid-rows-3 sm:grid-rows-none sm:grid-cols-3 h-full">
  <div class="opacity-100 overflow-hidden bg-cover bg-center" style="background-image: url('<%= Routes.static_path(@conn, "/images/pssst2.jpg") %>');">
  </div>
  <%= form_for @conn, Routes.page_path(@conn, :new_secret), [class: "p-4 lg:p-8 row-span-2 sm:row-auto sm:col-span-2 flex flex-col"], fn f -> %>
    <%= textarea(f, :secret, class: "mb-4 px-3 py-2 resize-none flex-1 w-full bg-black bg-opacity-0 border-2 border-dashed rounded", placeholder: "Secret message goes here...", maxlength: 1000) %>
    <%= submit "Create a secret link", class: "bg-gray-800 w-full border rounded px-3 py-2 font-semibold hover:border-blue-500 hover:text-blue-500 focus:border-blue-500 focus:text-blue-500" %>
  <% end %>
</div>
